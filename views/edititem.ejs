<%include ./temp/header%>
<div class="ui main text container segment">
   <div class="ui huge header">EDIT BLOG</div>
  <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
  <div class="field">
    <label>Title</label>
    <input type="text" name="blog[title]" value="<%=blog.title%>">
  </div>
  <div class="field">
    <label>Category</label>
    <input type="text" name="blog[category]" value="<%=blog.category%>">
  </div>
  <div class="field">
    <label>Image link</label>
    <input type="text" name="blog[image]" value="<%=blog.image%>">
  </div>

  <div class="field">
    <label>Body</label>
    <textarea name="blog[body]" ><%=blog.body%></textarea>  
</div>
  
 <button class="ui inverted olive button" type="submit">SUBMIT</button>
</form> 
</div>
 <%include ./temp/footer%>